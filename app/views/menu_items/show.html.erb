<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title"><%= @menu_group.name %></h3></div>
  <div class="panel-body">
    <div class="media">
      <div class="media-left">
        <table class="menu-item">
          <tr>
            <td class="menu-item-td" style="background-image: url('<%= @menu_item.image.url %>'); background-size: cover;"></td>
          </tr>
        </table>
      </div>
      <div class="media-body">
        <table class="menu-description">
          <tr>
            <td><h4 class="media-heading"><%= @menu_item.name %></h4></td>
            <td rowspan="2" class="text-right"><h2>$<%= '%.2f' % @menu_item.price %></h2>
              <%= link_to 'Edit', edit_menu_item_path(@menu_item) %> |
              <%= link_to 'Destroy', @menu_item, method: :delete, data: { confirm: 'Are you sure?' } %> |
              <%= link_to 'Back', menu_groups_path %></td>
          </tr>
          <tr>
            <td><%= @menu_item.description %></td>
            <td></td>
          </tr>
        </table>

      </div>
    </div>
  </div>
</div>
